<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Material" table="material" schema="rsp" dynamic-insert="true">
        <id name="materialID">
            <column name="materialID" sql-type="int" />
            <generator class="increment"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)"/>
        </property>
        <property name="amount">
            <column name="amount" sql-type="int"/>
        </property>
        <property name="introduction">
            <column name="introduction" sql-type="varchar(45)"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(255)" />
        </property>
        <property name="price">
            <column name="price" sql-type="int"/>
        </property>
        <property name="groupID">
            <column name="groupID" sql-type="int"/>
        </property>
        <property name="pictureNum">
            <column name="pictureNum" sql-type="int"/>
        </property>
        <property name="whetherRent">
            <column name="whetherRent" sql-type="int(1)"/>
        </property>

    </class>
</hibernate-mapping>