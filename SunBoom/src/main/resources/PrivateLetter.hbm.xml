<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.PrivateLetter" table="privateletter" schema="rsp" dynamic-insert="true">
        <id name="letterID">
            <column name="letterID" sql-type="int(11)" />
        </id>
        <property name="senderID">
            <column name="senderID" sql-type="int(11)"/>
        </property>
        <property name="receiverID">
            <column name="receiverID" sql-type="int(11)"/>
        </property>
        <property name="senderName">
            <column name="senderName" sql-type="varchar(45)"/>
        </property>
        <property name="receiverName">
            <column name="receiverName" sql-type="varchar(45)" />
        </property>
        <property name="time">
            <column name="time" sql-type="date"/>
        </property>
        <property name="content">
            <column name="content" sql-type="text"/>
        </property>


    </class>
</hibernate-mapping>