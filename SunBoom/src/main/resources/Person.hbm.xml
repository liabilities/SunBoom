<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Person" table="persontest" schema="rsp" dynamic-insert="true">
        <id name="personID">
            <column name="personID" sql-type="int(11)" />
            <generator class="increment"/>
        </id>
        <property name="usesrname">
            <column name="usesrname" sql-type="varchar(45)"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)"/>
        </property>
        <property name="nickName">
            <column name="nickName" sql-type="varchar(45)"/>
        </property>
        <property name="schoolID">
            <column name="schoolID" sql-type="int(11)" />
        </property>
        <property name="mail">
            <column name="mail" sql-type="varchar(45)"/>
        </property>
        <property name="avatar">
            <column name="avatar" sql-type="varchar(255)"/>
        </property>
        <property name="introduction">
            <column name="introduction" sql-type="varchar(255)"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="int(1)"/>
        </property>
        <property name="detailPath">
            <column name="detailPath" sql-type="varchar(255)"/>
        </property>
        <property name="registerTime">
            <column name="registerTime" sql-type="datetime"/>
        </property>
        <property name="identificationTime">
            <column name="identificationTime" sql-type="datetime"/>
        </property>
        <property name="state">
            <column name="state" sql-type="int(1)"/>
        </property>



    </class>
</hibernate-mapping>